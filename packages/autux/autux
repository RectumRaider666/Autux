#!/usr/bin/env bash
# Autux - Auto-Termux Custom Name-Space
# A tool for customizing your Termux namespace

VERSION="1.0.0"

show_help() {
    echo "Autux - Auto-Termux Custom Name-Space"
    echo ""
    echo "Usage: autux [options]"
    echo ""
    echo "Options:"
    echo "  -h, --help     Show this help message"
    echo "  -v, --version  Show version information"
    echo ""
}

show_version() {
    echo "Autux version $VERSION"
}

case "$1" in
    -h|--help)
        show_help
        ;;
    -v|--version)
        show_version
        ;;
    *)
        show_help
        ;;
esac
